# ===== Blockchain Configuration =====
RPC_URL=https://eth.didlab.org
CHAIN_ID=252501

# Backend admin private key (deploys/manages contracts)
PRIVATE_KEY=
# ===== Contract Addresses (set after deployment) =====
DEVICE_REGISTRY_ADDRESS=
DATA_ANCHOR_ADDRESS=
BREACH_NFT_ADDRESS=

# Address to receive breach NFTs (defaults to admin if not set)
BREACH_RECIPIENT=


# ===== IPFS Configuration =====
# Didlab IPFS node
IPFS_URL=https://ipfs.didlab.org/api/v0

# Or use web3.storage (uncomment and add your token)
# WEB3_STORAGE_TOKEN=your_token_here

# ===== Backend Settings =====
PORT=3000
BATCH_INTERVAL=60000  # milliseconds (60000 = 1 minute)

# ===== Breach Detection Rules =====
TEMP_MIN=2   # Minimum safe temperature (°C)
TEMP_MAX=8   # Maximum safe temperature (°C)

# ===== Device Simulator Settings =====
# Generate a device private key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DEVICE_PRIVATE_KEY=
API_URL=http://localhost:3000
SIMULATE_BREACH=false  # Set to 'true' to occasionally send out-of-range readings
